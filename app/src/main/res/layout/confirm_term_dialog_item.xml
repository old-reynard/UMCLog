<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/confirm_term_period_view"
        style="@style/CreateTermTextViews"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Reading" />

    <TextView
        android:id="@+id/confirm_term_this_level_text_view"
        style="@style/CreateTermTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="@string/level_label"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/confirm_term_period_view"
        app:layout_constraintTop_toBottomOf="@+id/confirm_term_period_view" />

    <TextView
        android:id="@+id/confirm_term_level_view"
        style="@style/CreateTermTextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/confirm_term_period_view"
        app:layout_constraintStart_toEndOf="@+id/confirm_term_this_level_text_view"
        app:layout_constraintTop_toBottomOf="@+id/confirm_term_period_view"
        tools:text="8" />

    <TextView
        android:id="@+id/confirm_term_students_view"
        style="@style/CreateTermTextViews"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:singleLine="false"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirm_term_period_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Emmaline Musser
Terina Running
Jeanne Finamore
Beatris Coonrod
Marlena Nuno
Nelia Stem
Reginia Wilczynski
Jolene Fetterman
Sherilyn Ice
Stacia Rehbein
Bernetta Horgan
Robin Mcgarrity" />
</android.support.constraint.ConstraintLayout>