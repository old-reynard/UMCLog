<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/period_spinner"
        style="@style/CreateTermButtons"
        android:layout_width="184dp"
        android:layout_height="77dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorAccent"
        android:dropDownSelector="@color/colorSecondaryDark"
        android:popupBackground="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/to_level_textview"
        style="@style/CreateTermTextViews"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        android:text="@string/to_level"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/choose_level_spinner"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/add-students_button"
        style="@style/CreateTermButtons"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/period_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/add_students_button" />

    <Spinner
        android:id="@+id/choose_level_spinner"
        style="@style/CreateTermButtons"
        android:layout_width="64dp"
        android:layout_height="30dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        app:layout_constraintEnd_toEndOf="@+id/add-students_button"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>