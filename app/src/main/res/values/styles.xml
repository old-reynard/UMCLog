<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cabin</item>

    </style>

    <!--CreateTermActivity theme-->
    <style name="CreateTermTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="android:fontFamily">@font/cabin</item>

    </style>

    <!--AttendanceActivity theme-->
    <style name="AttendanceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightPrimaryColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/cabin</item>
        <item name="colorPrimaryDark">@color/lightSecondaryColor</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <!--CreateTerm activity TextViews-->
    <style name="CreateTermTextViews">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    
    <!--CreateTermActivity buttons-->
    <style name="CreateTermButtons">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!--Attendance label buttons in Attendance Activity-->
    <style name="attendance_buttons">
        <item name="android:fontFamily">@font/cabin</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/primaryText</item>
        <!--<item name="android:background">@color/lightPrimaryColor</item>-->
    </style>

</resources>
